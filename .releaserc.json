{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github", {
        "assets": [
          {"path": "src/output/*.nupkg", "label": "Timesheet Filler"}
        ]
      }],
    [
      "@semantic-release/exec", {
        "prepareCmd" : "(cd src/TimesheetFiller.Cli && DOTNET_SYSTEM_GLOBALIZATION_INVARIANT=true dotnet pack /p:Version=${nextRelease.version})"
      }
    ],
    [
      "@semantic-release/git", {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "release: Released v${nextRelease.version} [skip ci]"
      }
    ]
  ]
}